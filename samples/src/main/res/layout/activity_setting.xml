<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:resAuto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.camnter.easycountdowntextureview.demo.SettingActivity">

    <com.camnter.easycountdowntextureview.EasyCountDownTextureView
        android:id="@+id/setting_countdown_text"
        android:layout_width="132dp"
        android:layout_height="36dp"
        resAuto:easyCountBackgroundColor="#ffdddddd"
        resAuto:easyCountColonColor="#ffdddddd"
        resAuto:easyCountColonSize="20sp"
        resAuto:easyCountHour="26"
        resAuto:easyCountMinute="6"
        resAuto:easyCountRectHeight="34dp"
        resAuto:easyCountRectRadius="5dp"
        resAuto:easyCountRectSpacing="12dp"
        resAuto:easyCountRectWidth="36dp"
        resAuto:easyCountSecond="26"
        resAuto:easyCountTimeColor="#ff3A94FF"
        resAuto:easyCountTimeSize="20sp"/>

    <Button
        style="@style/SettingButton"
        android:id="@+id/setting_hour_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/setting_hour_button"/>

    <Button
        style="@style/SettingButton"
        android:id="@+id/setting_minute_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/setting_hour_button"
        android:layout_toRightOf="@id/setting_hour_button"
        android:text="@string/setting_minute_button"/>

    <Button
        style="@style/SettingButton"
        android:id="@+id/setting_second_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/setting_minute_button"
        android:layout_toRightOf="@id/setting_minute_button"
        android:text="@string/setting_second_button"/>

    <Button
        style="@style/SettingButton"
        android:id="@+id/setting_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/setting_hour_button"
        android:text="@string/setting_start_button"/>

    <Button
        style="@style/SettingButton"
        android:id="@+id/setting_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/setting_minute_button"
        android:layout_toRightOf="@id/setting_minute_button"
        android:layout_above="@id/setting_second_button"
        android:text="@string/setting_stop_button"/>

</RelativeLayout>
